FROM node:20-alpine AS builder
WORKDIR /app/frontend-03
COPY frontend-03/package*.json ./
RUN npm ci
COPY frontend-03/ .
RUN npm run build

FROM nginx:1.27-alpine
RUN apk add --no-cache tzdata && \
  cp /usr/share/zoneinfo/Asia/Shanghai /etc/localtime && \
  echo "Asia/Shanghai" > /etc/timezone
COPY frontend-03/docker/nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /app/frontend-03/dist /usr/share/nginx/html
EXPOSE 80
ENTRYPOINT ["nginx", "-g", "daemon off;"]
